{
  "name": "loglite-backend",
  "monolite-root": "build",
  "scripts": {
    "build": "webpack-dashboard --port 3050 -- buildlite -j default~build",
    "dev": "webpack-dashboard --port 3050 -- buildlite -j default~dev"
  },
  "buildlite": {
    "default": {
      "outputPath": "dist",
      "dashboard": 3050,
      "babel": true,
      "eslint": true,
      "watch": true,
      "target": "node",
      "externals": [
        "nodeModules"
      ]
    },
    "dev": {
      "entry": {
        "server": "./setup/dev.index.js"
      }
    },
    "build": {
      "entry": {
        "server": "./setup/prod.index.js"
      }
    }
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "date-fns": "^1.29.0",
    "express": "^4.16.2",
    "history": "^4.7.2",
    "json2csv": "^3.11.5",
    "mongodb": "^2.2.33",
    "mongoose": "^4.13.9",
    "ramda": "^0.25.0"
  }
}
