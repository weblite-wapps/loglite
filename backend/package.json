{
  "name": "loglite-backend",
  "scripts": {
    "build": "../../../tools/buildlite/src/index.js default build",
    "dev": "../../../tools/buildlite/src/index.js default dev"
  },
  "buildlite": {
    "default": {
      "context": "src",
      "outputPath": "dist",
      "outputName": "server.js",
      "babel": true,
      "target": "node",
      "externals": [
        "nodeModules"
      ]
    },
    "dev": {
      "watch": true,
      "entry": "./setup/dev.index.js"
    },
    "build": {
      "entry": "./setup/prod.index.js"
    }
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "date-fns": "^1.29.0",
    "express": "^4.16.2",
    "history": "^4.7.2",
    "json2csv": "^3.11.5",
    "mongodb": "^2.2.33",
    "mongoose": "^4.13.9",
    "ramda": "^0.25.0"
  }
}
